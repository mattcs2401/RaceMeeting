<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: Styling/layout etc -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/delete_dialog"
    style="@style/layout_wrap_both"
    android:layout_gravity="top|center"
    android:useDefaultMargins="true"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_delete_row_container"
        style="@style/layout_wrap_both"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_city_code"
            style="@style/tv_text_style" />

        <TextView
            android:id="@+id/tv_race_code"
            style="@style/tv_text_style" />

        <TextView
            android:id="@+id/tv_race_no"
            style="@style/tv_text_style" />

        <TextView
            android:id="@+id/tv_race_sel"
            style="@style/tv_text_style" />

        <TextView
            android:id="@+id/tv_race_time"
            style="@style/tv_text_style" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_wrap_both"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_delete"
            style="@style/btn_dialog_style"
            android:text="@string/lbl_delete" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/btn_dialog_style"
            android:text="@string/lbl_cancel" />
    </LinearLayout>

</LinearLayout>