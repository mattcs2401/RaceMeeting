<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|top"
    android:layout_marginTop="96dp">

    <TextView
        android:text="Brisbane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRaceCity"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="(R)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRaceCode"
        app:layout_constraintLeft_toRightOf="@+id/tvRaceCity"
        android:layout_marginStart="40dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:text="Race:"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:id="@+id/tvRaceNoText"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRaceCity"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:text="8"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/tvRaceNo"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRaceNoText"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRaceCity"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:text="Sel:"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:id="@+id/tvRaceSelText"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRaceNoText"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:text="8"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/tvRaceSel"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRaceSelText"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRaceNo"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:text="15:59"
        android:layout_width="56dp"
        android:layout_height="64dp"
        android:id="@+id/tvRaceTime"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRaceNo"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:includeFontPadding="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRaceCode" />

    <Button
        android:text="@string/lbl_edit"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnEdit"
        app:layout_constraintTop_toBottomOf="@+id/tvRaceTime"
        app:layout_constraintLeft_toRightOf="@+id/tvRaceSel"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

</android.support.constraint.ConstraintLayout>