<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_row_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_city_code"
        style="@style/tv_text_style" />

    <TextView
        android:id="@+id/tv_race_code"
        style="@style/tv_text_style" />

    <TextView
        android:id="@+id/tv_race_no"
        style="@style/tv_text_style" />

    <TextView
        android:id="@+id/tv_race_sel"
        style="@style/tv_text_style" />

    <TextView
        android:id="@+id/tv_race_time"
        style="@style/tv_text_style" />

    <TextView
        android:id="@+id/tv_dchange_testing"
        style="@style/tv_text_style" />

</LinearLayout>