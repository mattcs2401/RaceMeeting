<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <TextView
        android:text="Delete the following ?"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvQuestion"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:text="Race"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvRace"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
        android:layout_marginTop="32dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:text="BR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvRaceCodes"
        app:layout_constraintBottom_toBottomOf="@+id/tvRace"
        app:layout_constraintRight_toRightOf="@+id/tvQuestion"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
        android:layout_marginTop="32dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:text="Number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvRaceNoText"
        app:layout_constraintLeft_toLeftOf="@+id/tvRace"
        app:layout_constraintTop_toBottomOf="@+id/tvRace"
        android:layout_marginTop="16dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:text="8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvRaceNo"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRaceCodes"
        app:layout_constraintLeft_toLeftOf="@+id/tvRaceCodes"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:text="Selection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvRaceSelText"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintLeft_toLeftOf="@+id/tvRaceNoText"
        app:layout_constraintTop_toBottomOf="@+id/tvRaceNoText"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:text="8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvRaceSel"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRaceNo"
        app:layout_constraintLeft_toLeftOf="@+id/tvRaceNo"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:text="Delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_delete"
        app:layout_constraintLeft_toLeftOf="@+id/tvRaceSelText"
        app:layout_constraintTop_toBottomOf="@+id/tvRaceSelText"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:text="Cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancel"
        app:layout_constraintLeft_toRightOf="@+id/btn_delete"
        app:layout_constraintTop_toBottomOf="@+id/tvRaceSelText"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textStyle="bold" />


</android.support.constraint.ConstraintLayout>
