<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_delete_constraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_dialog_delete_title"
        android:background="@drawable/ic_warning_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:text="Delete Meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dialog_delete_title"
        app:layout_constraintLeft_toRightOf="@+id/iv_dialog_delete_title"
        android:layout_marginStart="32dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:gravity="center_vertical|center_horizontal"
        android:text="Note: Cannot be undone."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvCaution"
        app:layout_constraintLeft_toLeftOf="@+id/iv_dialog_delete_title"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_delete_title"
        android:layout_marginTop="8dp" />

    <TextView
        android:gravity="center_vertical|center_horizontal"
        android:text="BR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvRaceCodes"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvCaution"
        android:layout_marginTop="16dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:gravity="center_vertical|center_horizontal"
        android:text="No"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvRaceNoText"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRaceNo"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvRaceCodes" />

    <TextView
        android:gravity="center_vertical|center_horizontal"
        android:text="8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvRaceNo"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRaceCodes"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvRaceCodes" />

    <TextView
        android:gravity="center_vertical|center_horizontal"
        android:text="8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvRaceSel"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRaceNoText"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvRaceCodes" />

    <TextView
        android:gravity="center_vertical|center_horizontal"
        android:text="13:00"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvRaceTime"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRaceSel"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvRaceNoText" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_delete"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/tvCaution"
        app:layout_constraintRight_toRightOf="@+id/tvCaution"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRaceNoText" />

</android.support.constraint.ConstraintLayout>
