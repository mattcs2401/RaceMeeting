<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDefaultSound"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/idSwitchDefaultSound"
        android:text="Play default sound" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idSwitchDefaultSound"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/tvDefaultSound"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Vibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvVibrate"
        app:layout_constraintBaseline_toBaselineOf="@+id/idSwitchVibrate"
        app:layout_constraintLeft_toLeftOf="@+id/tvDefaultSound" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idSwitchVibrate"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/idSwitchDefaultSound"
        android:layout_marginStart="88dp"
        app:layout_constraintLeft_toRightOf="@+id/tvVibrate" />

    <TextView
        android:text="Vibrations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvVibrations"
        app:layout_constraintLeft_toLeftOf="@+id/tvVibrate"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/tvVibrate" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idVibrateNumberPicker"
        app:layout_constraintLeft_toLeftOf="@+id/idSwitchVibrate"
        app:layout_constraintTop_toBottomOf="@+id/idSwitchVibrate" />

</android.support.constraint.ConstraintLayout>